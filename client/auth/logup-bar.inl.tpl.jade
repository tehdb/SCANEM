.signup

	div(ng-hide="vm.user")
		.btn.btn-link(ng-click="vm.openSignupModal($event)") {{"auth.sign_up" | translate }}

		.btn.btn-default(ng-click="vm.openLoginModal($event)") {{"auth.log_in" | translate }}

	div(ng-show="vm.user")
		span {{vm.user.username}}


	div(ng-show="false")
		ui-select(ng-model="person.selected")
			ui-select-match(placeholder="Select...") {{$select.selected.name}}
			ui-select-choices(repeat="p in people | filter: $select.search")
				div(ng-bind="p.name")
