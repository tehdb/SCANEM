.product-view

	ol.breadcrumb
		li
			a(href="#") Home
		li
			a(href="#") {{vm.category}}
		li.active {{vm.title}}

	.row
		.col-sm-6
			img.img-thumbnail( src="http://tehdb.com/img/fotoleinwand24/AA0197-1.jpg" )

			.thumbs
				img.active(src="http://tehdb.com/img/fotoleinwand24/AA0197-1.jpg")
				img(src="http://tehdb.com/img/fotoleinwand24/AA0197-1-1.jpg")
				img(src="http://tehdb.com/img/fotoleinwand24/frame.jpg")


		.col-sm-6
			h1.title {{vm.title}}

			.price.text-warning
				span {{vm.price}} &euro;

			.delivery
				i.fa.fa-truck
				span auf lager, versand in 24 Stunden


			.rating
				span user rating:
				rating(ng-model="vm.rate")

			.selected-size selected size: {{vm.selectedSize}}

			.sizes.label-bar
				span.label.label-default(ng-repeat="s in vm.sizes" ng-class="{active: $first}") {{s}}

			.selected-color selected color: {{vm.selectedColor}}

			.colors
				img.color.active(src="http://tehdb.com/img/fotoleinwand24/AA0197-1.jpg")
				img.color(src="http://tehdb.com/img/fotoleinwand24/AA0197-2.jpg")
				img.color(src="http://tehdb.com/img/fotoleinwand24/AA0197-3.jpg")
				img.color(src="http://tehdb.com/img/fotoleinwand24/AA0197-4.jpg")

			.action-bar
				button.btn.btn-default.btn-lg.btn-primary
					i.fa.fa-shopping-cart
					span add to card
				button.btn.btn-default.btn-lg
					i.fa.fa-bookmark
					spann add to favorites


			.tags.label-bar
				span.label.label-default(ng-repeat="t in vm.tags") {{t}}





